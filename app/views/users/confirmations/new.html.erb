<div class="page-header">
  <h1>Resend confirmation</h1>
</div>

<p>Didn't get your confirmation instructions yet? Try resending them below.</p>

<hr />

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }, :class => 'form-inline') do |f| %>
  <%= error_group_for(f) do -%>
    There was a problem sending your confirmation:
  <% end -%>

  <%= control_group_for(f, :email) do %>
    <%= f.text_field :email, :tabindex => autotabindex %>
  <% end %>

  <%= f.submit "Resend confirmation", :class => 'btn btn-primary', :tabindex => autotabindex %>
<% end %>
