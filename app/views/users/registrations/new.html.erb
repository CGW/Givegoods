<div class="row">
  <div class="span7"> 
    <div class="page-header">
      <h1>Sign Up</h1>
    </div>

    <p>Calling all charities and merchants! Sign up today to partner with
    others in your community to encourage charitable giving and support local
    businesses. Create an account below.</p>

    <p>Still have questions? Learn more about what we offer <%= link_to 'charities', page_path('charity_info') %> and <%= link_to 'merchants', page_path('merchant_info') %>.</p>

    <hr />

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= error_group_for(f) do %>
        <strong>Heads up!</strong> Looks like there was a problem creating your account:
      <% end %>

      <%= control_group_for(f, :first_name) do %>
        <%= f.text_field :first_name, :tabindex => autotabindex %>
      <% end %>

      <%= control_group_for(f, :last_name) do %>
        <%= f.text_field :last_name, :tabindex => autotabindex %>
      <% end %>

      <%= control_group_for(f, :email) do %>
        <%= f.text_field :email, :tabindex => autotabindex %>
      <% end %>

      <%= control_group_for(f, :password) do %>
        <%= f.password_field :password, :tabindex => autotabindex %>
      <% end %>

      <%= control_group_for(f, :password_confirmation) do %>
        <%= f.password_field :password_confirmation, :tabindex => autotabindex %>
      <% end %>

      <hr />

      <div class="row">
        <div class="span5">
          <%= f.label :terms, :class => 'checkbox' do %>
            <%= f.check_box :terms, :tabindex => autotabindex %> 
            I agree to the <%= link_to "Terms and Conditions", page_path('terms-and-conditions'), :target => '_blank' %>
          <% end %>
        </div>
  
        <div class="span2">
          <%= f.submit 'Sign up', :class => 'btn btn-primary', :tabindex => autotabindex %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="span3 pull-right login-panel invisible-well">
    <%= form_for(resource.class.new, :as => 'user_session', :url => session_path(resource_name)) do |f| %>
      <p><small><em>Already have an account?</em></small></p>

      <h4>Sign In</h4>

      <fieldset>
        <%= control_group_for(f, :email) do %>
          <%= f.text_field :email, :tabindex => autotabindex %>
        <% end %>

        <%= control_group_for(f, :password) do %>
          <%= f.password_field :password, :tabindex => autotabindex %>
        <% end %>
      </fieldset>

      <div class="clearfix">
        <div class="pull-left" style="width: 125px; margin-top: 3px;">
          <% if devise_mapping.rememberable? -%>
            <label class="checkbox">
              <%= f.check_box :remember_me, :tabindex => autotabindex %> 
              <small><%= User.human_attribute_name(:remember_me) %></small>
            </label>
          <% end -%>
        </div>
        <div class="pull-right">
          <%= f.submit "Log in", :class => "btn btn-primary", :tabindex => autotabindex %>
        </div>
      </div>

      <br />

      <small><em><%= link_to "Forgot your password?", new_password_path(resource_name) %></em></small>
    <% end %>
  </div>
</div>

