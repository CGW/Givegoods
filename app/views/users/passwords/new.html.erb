<div class="page-header">
  <h1>Forgot your password?</h1>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= error_group_for(f) do -%>
    There was a problem sending your password reset instructions:
  <% end -%>

  <%= control_group_for(f, :email) do %>
    <%= f.email_field :email, :tabindex => autotabindex %>
  <% end %>

  <%= f.submit "Send password reset instructions", :class => 'btn btn-primary', :tabindex => autotabindex %>
<% end %>
