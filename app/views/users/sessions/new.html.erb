<div class="page-header">
  <h1>Sign in</h1>
</div>

<p>Don't have an account? <%= link_to 'Sign up for one.', new_user_registration_path %></p>

<br />

<%= form_for(resource.class.new, :as => 'user_session', :html => { :class => 'form-horizontal' }, :url => session_path(resource_name)) do |f| %>
  <fieldset>
    <%= control_group_for(f, :email) do %>
      <%= f.text_field :email, :tabindex => autotabindex %>
    <% end %>

    <%= control_group_for(f, :password) do %>
      <%= f.password_field :password, :tabindex => autotabindex %>
    <% end %>
  </fieldset>

  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :remember_me, :tabindex => autotabindex %> 
        <small><%= User.human_attribute_name(:remember_me) %></small>
      </label>

      <%= f.submit "Log in", :class => "btn btn-primary", :tabindex => autotabindex %>

      <br />
      <br />

      <small><em><%= link_to "Forgot your password?", new_password_path(resource_name), :tabindex => autotabindex %></em></small>
    </div>
  </div>
<% end %>

