<% charity ||= nil %>

<div class="card" id="<%= dom_id(merchant) %>">
  <%= link_to charity ? [charity, merchant] : [merchant, :charities], :remote => !!charity do %>
    <div class="card-image">
      <%= image_tag merchant.picture.grid, :class => 'clip-image', :alt => merchant.name %>
    </div>
    <h2><%= merchant.name %></h2>
    <h3>Donate <%= merchant.offer.donation_value.format(:no_cents_if_whole => true) %>, Save up to <%= merchant.offer.offer_value.format(:no_cents_if_whole => true) %>.</h3>
  <% end %>
</div>
