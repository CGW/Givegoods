<% if @charity %>

  <% content_for :grid_header do %>
    <div id="grid-header-help">
      <h1>The rewards below directly support <%= @charity.name %></h1>
      <ul>
        <li><%= image_tag 'grid/header-help-number1.png' %>Choose rewards.</li>
        <li><%= image_tag 'grid/header-help-number2.png' %>Make a donation.</li>
        <li><%= image_tag 'grid/header-help-number3.png' %>Save at local merchants.</li>
      </ul>
    </div>
  <% end %>
  
  <% content_for :grid_left do %>
    <%= render :partial => 'charities/grid_info', :locals => { :charity => @charity } %> 
  <% end %>

<% else %>
  <% content_for :grid_header do %>
    <h1>Rewards</h1>
  <% end %>

  <% content_for :grid_left do %>
    <%= render "grid_controls" %>
  <% end %>

<% end %>

<%= render :partial => "merchants/index", :locals => { :merchants => @merchants, :charity => @charity, :bundles => @bundles } %>
