body, html {
  background-color: #f6f2e3;
  margin: 0px;
  padding: 0px;
  font-family: "HelveticaNeue", "Helvetica Neue", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
}

#header-outer {
  background-color: #000000;
  width: 100%;
}

#header-inner {
  background-image: url(<%= asset_path 'givegoods.png' %>);
  background-repeat: no-repeat;
  background-position: 0% 50%;
  width: 960px;
  height: 60px;
  margin: 0px auto;
  padding:0px;
}

#back {
  background-color: #FFFFFF;
  width: 880px;
  margin: 0px auto;
  margin-top: 20px;
  padding: 40px;
  height: 600px;
}

#message {
  position: relative;
  top: -600px;
  width: 200px;
  background-color: #fff;
  opacity:0.8;
  filter:alpha(opacity=80);
  padding: 20px;
  margin: 20px;
}

a {
  color: #00A5D6;
  text-decoration: none
}

h2 {
  line-height: 1em;
  margin:0px;
}

p {
  line-height: 1.2em;
}
